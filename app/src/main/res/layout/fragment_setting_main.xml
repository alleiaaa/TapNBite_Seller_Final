<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD">

    <!-- Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textColor="#232946"
        android:textSize="20sp"
        android:fontFamily="@font/atyp_medium"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <!-- Store Status Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/storeStatusCard"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@id/settingsTitle"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/storeStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/atyp_semi_bold"
                        android:text="Store Status"
                        android:textColor="#232946"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/currentlyopen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/atyp_medium"
                        android:text="Currently Open"
                        android:textColor="#868686"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/operatingHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/atyp_semi_bold"
                        android:text="Operating Hours"
                        android:textColor="#232946"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/times"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/atyp_medium"
                        android:text="7:00 am - 5:00 pm"
                        android:textColor="#868686"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/changebutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="13dp"
                        android:backgroundTint="#f3f3f3"
                        android:fontFamily="@font/atyp_medium"
                        android:text="Change"
                        android:textColor="#868686"
                        android:textSize="11sp"
                        app:cornerRadius="0dp"
                        app:strokeColor="#979797"
                        app:strokeWidth="1dp" />

                    <Button
                        android:id="@+id/openhoursbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="13dp"
                        android:backgroundTint="#f3f3f3"
                        android:fontFamily="@font/atyp_medium"
                        android:text="Edit"
                        android:textColor="#868686"
                        android:textSize="11sp"
                        app:cornerRadius="0dp"
                        app:strokeColor="#979797"
                        app:strokeWidth="1dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Operating Hours Section -->

    <!-- Account Section Label -->
    <TextView
        android:id="@+id/accountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storeStatusCard"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Account"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:fontFamily="@font/atyp_medium" />

    <!-- Account Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/storesettingButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/accountLabel"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_useracc" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:paddingTop="3dp"
                android:fontFamily="@font/atyp_medium"
                android:textSize="16.5dp"
                android:textColor="#232946"
                android:text="Store Settings" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_arrowright" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Informations Section Label -->
    <TextView
        android:id="@+id/informationsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storesettingButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Informations"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:fontFamily="@font/atyp_medium" />

    <!-- Informations Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/helpcenter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/informationsLabel"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_questionmark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:paddingTop="3dp"
                android:fontFamily="@font/atyp_medium"
                android:textSize="16.5dp"
                android:textColor="#232946"
                android:text="Help Center" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_arrowright" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Terms and Conditions Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/helpcenter"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_article" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:paddingTop="3dp"
                android:text="Terms and Conditions"
                android:textColor="#232946"
                android:textSize="16.5dp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_arrowright" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Privacy Policy Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/privacypolicy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/terms"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_privacy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:paddingTop="3dp"
                android:text="Privacy Policy"
                android:textColor="#232946"
                android:textSize="16.5dp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_arrowright" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Logout Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/privacypolicy"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:paddingTop="3dp"
                android:fontFamily="@font/atyp_medium"
                android:textSize="16.5dp"
                android:textColor="#FFA01E"
                android:text="Logout" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
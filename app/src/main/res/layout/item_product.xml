<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/adobo"
            android:scaleType="centerCrop" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/foodImage"
            android:layout_marginStart="16dp"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodName"
            android:layout_toRightOf="@id/foodImage"
            android:layout_marginStart="16dp"
            android:text="â‚±0.00"
            android:textSize="16sp" />

        <!-- More Options Button -->
        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/option_menu"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Availability & Stock -->
        <TextView
            android:id="@+id/foodStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodPrice"
            android:layout_toRightOf="@id/foodImage"
            android:layout_marginStart="16dp"
            android:text="Available"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/foodStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodPrice"
            android:layout_toRightOf="@id/foodStatus"
            android:layout_marginStart="16dp"
            android:text="Stock: 15"
            android:textSize="16sp" />

        <!-- Edit & Stock Buttons -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodStatus"
            android:layout_toRightOf="@id/foodImage"
            android:backgroundTint="@color/primary"
            android:layout_marginStart="16dp"
            android:text="Edit"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/stockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodStatus"
            android:layout_toRightOf="@id/editButton"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/primary"
            android:text="Stock"
            app:cornerRadius="0dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
